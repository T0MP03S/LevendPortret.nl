# Root .env.local / .env.production example
# Note: keep secrets safe; do not commit .env.local

# Database
# Use your local Postgres connection string (adjust host/port/user/password/db)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/levendportret?schema=public"

# NextAuth
# IMPORTANT: Use the SAME secret for all apps (web/club/fund/admin) to enable SSO
NEXTAUTH_SECRET="replace-with-a-strong-random-string"

# Shared auth cookie domain for local subdomains SSO
# For local dev with hosts entries like web.levendportret.local, etc.
AUTH_COOKIE_DOMAIN=.levendportret.local

# Admin bootstrap (comma-separated emails promoted to ADMIN on sign-in)
ADMIN_EMAILS="your-email@example.com"

# Google OAuth (optional in dev)
# If you configure Google, add callback URIs per app, e.g.:
#   http://web.levendportret.local:3000/api/auth/callback/google
#   http://club.levendportret.local:3001/api/auth/callback/google
#   http://fund.levendportret.local:3002/api/auth/callback/google
#   http://admin.levendportret.local:3003/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Email (magic link) - optional for dev (we log links in the terminal if not configured)
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
EMAIL_FROM="no-reply@levendportret.local"

# PER-APP runtime (do NOT set a single NEXTAUTH_URL here when running multiple apps)
# Start each app with its own NEXTAUTH_URL in the shell, e.g. PowerShell examples:
#   $env:NEXTAUTH_URL="http://web.levendportret.local:3000"; pnpm -C apps/web dev
#   $env:NEXTAUTH_URL="http://club.levendportret.local:3001"; pnpm -C apps/club dev
#   $env:NEXTAUTH_URL="http://fund.levendportret.local:3002"; pnpm -C apps/fund dev
#   $env:NEXTAUTH_URL="http://admin.levendportret.local:3003"; pnpm -C apps/admin dev
