generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  EDITOR
  FINANCE
  ADMIN
}

enum ClipType {
  LONG
  SHORT
}

enum MembershipStatus {
  ACTIVE
  EXPIRED
}

enum MembershipProduct {
  CLUB
  COACH
  FUND
  CLIPS
}

enum DonationStatus {
  PENDING
  PAID
  REFUNDED
  FAILED
}

enum ModerationStatus {
  SUBMITTED
  APPROVED
  REJECTED
}

enum ResourceType {
  COMPANY
  CLIP
  FUND
  ARTICLE
}

enum AccountStatus {
  PENDING_VERIFICATION
  PENDING_APPROVAL
  ACTIVE
  REJECTED
}

// Nieuwe status-enums voor Clips en Interne Pagina's
enum ClipStatus {
  IN_REVIEW
  PUBLISHED
  ARCHIVED
}

enum PageStatus {
  DRAFT
  IN_REVIEW
  PUBLISHED
  ARCHIVED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  phone         String?
  emailVerified DateTime?
  image         String?
  passwordHash  String?   @db.Text
  role          Role      @default(USER)
  status        AccountStatus @default(PENDING_VERIFICATION)
  accounts      Account[]
  sessions      Session[]
  company       Company?     @relation("CompanyOwner")
  moderations   Moderation[] @relation("ModerationReviewer")
  memberships   Membership[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id            String   @id @default(cuid())
  sessionToken  String   @unique
  userId        String
  expires       DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id              String    @id @default(cuid())
  name            String
  city            String
  address         String
  zipCode         String
  houseNumber     String
  workPhone       String?   
  kvkNumber       String?   
  website         String?   

  // Relatie met de eigenaar
  ownerId         String    @unique // Elke user kan maar 1 bedrijf bezitten
  owner           User      @relation("CompanyOwner", fields: [ownerId], references: [id])

  // Velden die al bestonden
  slug        String   @unique
  tagline     String?
  description String?
  sector      String?
  location    String? // Kan nu worden afgeleid uit city/address
  socials     Json?
  logoUrl     String?

  clips       Clip[]
  companyPage CompanyPage?
  memberships Membership[]
  funds       Fund[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Clip {
  id            String     @id @default(cuid())
  companyId     String
  vimeoShortId  String
  status        ClipStatus @default(IN_REVIEW)

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanyPage {
  id                        String      @id @default(cuid())
  companyId                 String      @unique
  slug                      String      @unique
  status                    PageStatus  @default(DRAFT)
  longVideoVimeoId          String?
  aboutLong                 String?
  gallery                   Json?
  accentColor               String?
  titleFont                 String?
  bodyFont                  String?
  roundedCorners            Boolean     @default(false)
  showCompanyNameNextToLogo Boolean     @default(true)
  socials                   Json?
  showContactPage            Boolean     @default(true)

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Membership {
  id         String   @id @default(cuid())
  userId     String
  companyId  String
  startDate  DateTime @default(now())
  endDate    DateTime?
  status     MembershipStatus @default(ACTIVE)
  product    MembershipProduct @default(CLUB)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([userId, companyId, product])
}

model Fund {
  id           String  @id @default(cuid())
  companyId    String
  slug         String  @unique
  title        String
  story        String?
  videoVimeoId String?
  personName   String?
  personPhotoUrl String?
  targetAmountCents Int
  deadline     DateTime?
  isPublic     Boolean @default(false)

  company   Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  donations Donation[]

  @@unique([companyId])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donation {
  id          String   @id @default(cuid())
  fundId      String
  amountCents Int
  recurring   Boolean  @default(false)
  donorName   String?
  donorEmail  String?
  isAnonymous Boolean  @default(false)
  status      DonationStatus @default(PENDING)
  mollieId    String?

  fund Fund @relation(fields: [fundId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Moderation {
  id           String          @id @default(cuid())
  resourceType ResourceType
  resourceId   String
  status       ModerationStatus @default(SUBMITTED)
  reviewerId   String?
  notes        String?

  reviewer User? @relation("ModerationReviewer", fields: [reviewerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
